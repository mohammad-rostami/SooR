<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/pad"
    android:paddingRight="@dimen/pad"
    android:paddingTop="@dimen/pad">

    <android.support.v7.widget.CardView
        android:id="@+id/list_item_card"
        android:transitionName="profile"
        android:layout_width="@dimen/size"
        android:layout_height="@dimen/size"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/activity_main_img_compare_first"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/eighth" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/list_item_text"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="item 1"
        android:textColor="#1976d2"
        android:textSize="8dp" />
</LinearLayout>